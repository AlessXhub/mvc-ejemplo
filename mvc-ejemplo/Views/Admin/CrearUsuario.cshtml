@{
	ViewData["Title"] = "Crear Usuario";
}
<h2>Crear Usuario</h2>
<!-- Formulario POST para enviar los datos al controlador -->
<form method="post">
    <div>
        <label>Nombre:</label>
        <input type="text" name="nombre" required />
    </div>

    <div>
        <label>Login:</label>
        <input type="text" name="login" required />
    </div>

    <div>
        <label>Contraseña:</label>
        <input type="password" name="contrasena" required />
    </div>

    <div>
        <label>Rol:</label>
        <select name="rolId" required>
            <option value="2"> Profesor </option> <!-- IdRol = 2 -->
            <option value="3"> Alumno </option>   <!-- IdRol = 3 -->
        </select>
    </div>

    <button type="submit">Crear</button>
</form>

<p style="color:green">@ViewBag.Mensaje</p> <!-- Mensaje de éxito -->

